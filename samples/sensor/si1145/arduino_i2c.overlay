/*
 * Example configuration of a SI1145 device on an Arduino I2C bus.
 *
 * Device address 0x77 is assumed. Your device may have a different
 * address; check your device documentation if unsure.
 */
&i2c0 {
	status = "okay";
	si1145@76 {
		compatible = "silabs,si1145";
		reg = <0x76>;
		label = "SI1145_I2C";
	};
};
